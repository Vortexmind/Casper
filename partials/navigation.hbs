{{#if isSecondary}}
    <ul class="nav">
        {{#foreach navigation}}
            <li class="nav-{{slug}}">
               <a href="{{url}}" class="social-link" target="_blank" rel="noopener">
                    <svg width="24" height="24" role="img" aria-label="{{slug}} icon">
                        <use xlink:href="#{{slug}}"></use>
                    </svg>
                </a>
            </li>
        {{/foreach}}
    </ul>
{{else}}
    <ul class="nav">
        {{#foreach navigation}}
            <li class="{{link_class for=(url) class=(concat "nav-" slug)}}">
                <a href="{{url absolute="true"}}" target="_blank" rel="noopener">{{label}}</a>
            </li>
        {{/foreach}}
    </ul>
{{/if}}